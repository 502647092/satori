  "devDependencies": {
    "@types/ws": "^8.5.8"
  },
  "dependencies": {
    "@satorijs/element": "^2.5.1",
    "@satorijs/protocol": "^1.1.1",
    "cordis": "^3.3.1",
    "cordis-axios": "^4.0.1",
    "cosmokit": "^1.5.1",
    "reggol": "^1.6.3",
    "schemastery": "^3.14.1",
    "ws": "^8.14.2"
